@model IEnumerable<Test_Dev_JR.Models.Tarea>

@{
    ViewData["Title"] = "Index";
}

<h1>Resultado de la busqueda</h1>

<table class="table">
    <thead>
        <tr>
            <th>
               Título
            </th>
            <th>
                Descriptión
            </th>
            <th>
                Fecha de Registro
            </th>
            <th>
                ¿Tarea completada?
            </th>
            <th>
                Fecha de culminación
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaTareaRegistro)
            </td>
                <td align="center">
                @Html.DisplayFor(modelItem => item.TareaCompletada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaTareaCompletada)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
