@model Test_Dev_JR.Models.Tarea

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar una tarea</h1>

<h3>¿Desea eliminar esta tarea?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Título
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            Fecha de registro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaTareaRegistro)
        </dd>
        <dt class = "col-sm-2">
            ¿Tarea completada?
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TareaCompletada)
        </dd>
        <dt class = "col-sm-2">
            Fecha de cuminación
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaTareaCompletada)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-outline-success">Cancelar</a>
    </form>
</div>
